# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Supabase Production Configuration
NEXT_PUBLIC_SUPABASE_URL=your_production_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key_here

# Database Configuration
DATABASE_URL=your_production_database_connection_string_here

# API Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com/api
API_SECRET_KEY=your_strong_api_secret_key_here

# Streamlake API (Production)
VC_API_KEY=your_production_streamlake_api_key_here

# Security Configuration
NEXTAUTH_SECRET=your_strong_nextauth_secret_here
NEXTAUTH_URL=https://your-domain.com

# File Storage
NEXT_PUBLIC_STORAGE_URL=your_production_storage_url_here
FILE_UPLOAD_MAX_SIZE=52428800

# Environment
NODE_ENV=production

# Monitoring & Alerts
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# CDN Configuration (if using)
NEXT_PUBLIC_CDN_URL=https://your-cdn-domain.com

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here